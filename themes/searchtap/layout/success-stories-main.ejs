<% var story = site.data.success_stories.find(x => x.id === page.id) %>

<body class="scroll-assist">

<%- partial('_partial/mobile-nav') %>

<div id="wrapper">

    <%- partial('_partial/header-nav') %>

    <div id="page-content-wrapper">

        <a href="<%- url_for('request-demo') %>" class="btn btn-sm btn-filled pull-right sales">Request Demo</a>

        <!--story header-->
        <div class="bg-blue-c">
            <div>
                <section class="image-edge pt0 pb0 pt-xs-40 pb-xs-40">

                    <div class="col-md-6 col-sm-7 pt88 pl65 tt-p">
                        <div class="clearfix"></div>
                        <h2 class="mb16 _500 case-title"><%- story.about %></h2>

                        <%- image_tag(`img/success-stories/${story.stat_image}`, {
                            alt: story.title,
                            class: "img-responsive ml21"
                        }) %>

                        <div class="clearfix"></div>
                    </div>

                    <div class="col-md-6 col-sm-4 ">
                        <%- image_tag(`/img/success-stories/${story.main_image}`, {
                            alt: story.title,
                            class: "mb-xs-24 img-responsive center-block shadow-case mt30 mb30 max-width-600"
                        }) %>
                    </div>

                </section>
            </div>
        </div>
        <!--story header end-->

        <div class="main-container">

            <!--testimonial-->
            <section class=" pt48 mb0 p32 pb0">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="testimonials">
                        <ul>
                            <li>
                                <p class="lead"><%- story.review %></p>
                                <div class="quote-author">

                                    <%- image_tag(`/img/success-stories/${story.reviewer_image}`, {
                                       draggable: false,
                                        alt: story.reviewer
                                    })%>

                                    <span>- <%- story.reviewer %></span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
            <!--testimonial end-->

            <div class="main-container mt16 ecom">
                <div class="container features-t">

                    <!--store details-->
                    <div class="col-md-3 hidden-sm">
                        <div class="widget white-box pt0">

                            <%- image_tag(`/img/success-stories/${story.store_logo}`, {
                               class: "img-responsive pb10 img-max-width"
                            })%>

                            <hr>
                            <div class="pb5"><b>Store:</b>
                                <a href="<%- story.store_address%>" target="_blank"><%- story.title %></a>
                            </div>
                            <div class="pb5"><b>Industry:</b> <%- story.industry_type %>
                            </div>
                            <div class="pb5"><b>Platform:</b> <%- story.platform.replace(/-/g, ' ') %></div>
                        </div>

                        <%- partial('./_partial/success-story-form') %>

                    </div>
                    <!--store details end-->

                    <%- page.content %>

                </div>
            </div>
        </div>

    </div>

    <%- partial('_partial/footer-nav') %>

</div>